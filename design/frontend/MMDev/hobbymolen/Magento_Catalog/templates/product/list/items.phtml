                                                                <img src="<?php echo $this->getViewFileUrl('images/icons/min_icon.svg'); ?>">
                                                            <?php else: ?>
                                                                <img src="<?php echo $this->getViewFileUrl('images/icons/min_icon_disabled.svg'); ?>">
